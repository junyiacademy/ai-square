#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

cd frontend

echo "🔍 Running TypeScript checks..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "❌ TypeScript errors found. Please fix before pushing."
  exit 1
fi

echo "📋 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint errors found. Please fix before pushing."
  exit 1
fi

echo "✅ All checks passed! Pushing to remote..."