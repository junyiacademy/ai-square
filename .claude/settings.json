{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/check-agent-rules.py",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "/Users/young/project/ai-square/.claude/hooks/universal-agent-rules.py",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"output\": \"{output}\", \"prompt\": \"{prompt}\"}' | python3 /Users/young/project/ai-square/.claude/hooks/error-reflection.py",
            "timeout": 3
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "Grep(*)",
      "Glob(*)",
      "LS(*)",
      "Bash(npm run test:*)",
      "Bash(npm test:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run build:*)",
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npx jest:*)",
      "Bash(npx tsx:*)",
      "Bash(npx tsc:*)",
      "Bash(npx eslint:*)",
      "Bash(npx playwright test:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(jq:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git config:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(rm:*)",
      "Bash(pkill:*)",
      "Bash(true)",
      "Bash(for:*)",
      "Bash(do)",
      "Bash(if:*)",
      "Bash(then)",
      "Bash(fi)",
      "Bash(done)",
      "Bash(make:*)",
      "Bash(SKIP_FULL_TEST=1 git:*)",
      "Bash(SKIP_TYPECHECK=1 git:*)",
      "Bash(SKIP_TESTS=1 git:*)",
      "Bash(SKIP_WEBSERVER=1 npx:*)",
      "Bash(PWTEST_SKIP_SERVER=1 npx:*)",
      "Bash(PGPASSWORD=postgres psql:*)"
    ],
    "deny": []
  },
  "projectSettings": {
    "name": "ai-square",
    "type": "fullstack",
    "framework": "next.js",
    "backend": "fastapi",
    "database": "postgresql",
    "testing": "jest",
    "linting": "eslint",
    "typecheck": "typescript"
  }
}
