{
  "hooks": [
    {
      "matcher": "*",
      "hooks": [
        {
          "eventName": "UserPromptSubmit",
          "type": "command",
          "command": "./.claude/hooks/universal-agent-rules.py",
          "timeout": 5
        }
      ]
    }
  ],
  "permissions": {
    "allow": [
      "Read(*)",
      "Write(*)",
      "Edit(*)",
      "MultiEdit(*)",
      "Grep(*)",
      "Glob(*)",
      "LS(*)",
      "Bash(npm run test:*)",
      "Bash(npm test:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run build:*)",
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npx jest:*)",
      "Bash(npx tsx:*)",
      "Bash(npx tsc:*)",
      "Bash(npx eslint:*)",
      "Bash(npx playwright test:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(sed:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(curl:*)",
      "Bash(jq:*)",
      "Bash(node:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git config:*)",
      "Bash(git push:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(rm:*)",
      "Bash(pkill:*)",
      "Bash(true)",
      "Bash(for:*)",
      "Bash(do)",
      "Bash(if:*)",
      "Bash(then)",
      "Bash(fi)",
      "Bash(done)",
      "Bash(make:*)"
    ],
    "deny": []
  },
  "projectSettings": {
    "name": "PROJECT_NAME",
    "type": "frontend",
    "framework": "next.js",
    "language": "typescript",
    "testing": "jest",
    "linting": "eslint",
    "package_manager": "npm"
  }
}
